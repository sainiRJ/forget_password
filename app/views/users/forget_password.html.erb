<div class="col-lg-12">
  <div class="card mt-5 mb-5">
    <div class="card-body">
      <h2 class="text-center">Forget Password </h2>
    </div>
  </div>
</div>

<%= form_for :user, url: user_forget_path(token: params[:token]) do |f| %>
<%= content_tag :div, class: 'my-div', style: 'border: solid black 2px;width:50%;height:300px;margin-left: 25%;background-color:#d0caed  ' do %>


  <%= f.hidden_field :token, value: params[:token] %>
  
  <div class="form-row" style="margin-left: 20%; margin-top:8%">
    <%= f.label :password %>
    <%= f.password_field :password, style:'margin-left:23%' %>
  </div>

  <div class="form-row" style="margin-left: 20%; margin-top:8%">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, style:'margin-left:5%' %>
  </div>

  <div class="form-row" style="text-align:center; margin-top:12%">
    <%= f.submit "Update Password" %>
  </div>
<% end %>
<% end %>

