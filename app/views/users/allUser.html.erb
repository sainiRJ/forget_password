<div class="container mt-5">
    <div class="row mb-3">
      <div class="col text-center">
        <h2>User Details</h2>
      </div>
    </div>
  
    <div class="row">
      <div class="col">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Full Name</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  
    <div class="row justify-content-between align-items-center">
      <div class="col-auto">
        <%= will_paginate @users, class: "pagination" %>
      </div>
      <div class="col-auto">
        <%= form_tag user_list_path, method: :get, class: "form-inline" do %>
          <%= text_field_tag :page, params[:page], class: "form-control mr-2", placeholder: "Jump to page..." %>
          <%= submit_tag "Go", class: "btn btn-primary",style: "margin-top: 5px" %>
        <% end %>
      </div>
    </div>
  </div>
  